{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SymbolSweep",
  "version": "1.0.0",
  "identifier": "com.mvarley07.symbolsweep",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "SymbolSweep",
        "label": "main",
        "width": 280,
        "height": 345,
        "minWidth": 280,
        "minHeight": 200,
        "maxWidth": 280,
        "maxHeight": 420,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true,
        "shadow": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "Info.plist"
    }
  }
}
